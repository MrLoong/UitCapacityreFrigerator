                                    <StackPanel  >
                                        <Image Source="/images/5.png"/>
                                        <TextBlock Text="零食类" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Controls:Tile.Content>
                            </Controls:Tile>

                        </StackPanel>
                    </StackPanel>
                </TabItem.Content>
