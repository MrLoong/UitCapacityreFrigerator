<Window x:Class="UitCapacityreFrigerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        WindowStyle ="None"
        Icon="/images/logo.ico"
        WindowState="Maximized"
        Title="MainWindow" Height="600" Width="1024">
    <!--
       WindowStyle="None"
        WindowState="Maximized"
    -->
    <Window.Resources>
        <!-- TabItem的样式 -->
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <!-- 主Border -->
                            <Border Name="bd"
                              Background="Gray"
                              BorderBrush="Gray"
                              BorderThickness="0"
                              CornerRadius="0"
                              Margin="1">
                                <ContentPresenter ContentSource="Header"
                                            VerticalAlignment="Center"/>
                                <!--    Margin="20,30"/>-->
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="BorderThickness" Value="0" />

                                <Setter TargetName="bd" Property="Background" Value="#00a4ef"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <!-- TabControl的样式 -->
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Padding="0">
                                <TabPanel IsItemsHost="True" Background="#adadad"/>
                            </Border>
                            <Border Grid.Column="1"
                               BorderBrush="Gray"
                               Padding="0"
                               BorderThickness="0">
                                <ContentPresenter ContentSource="SelectedContent" 
                                             Name="PART_SelectedContentHost"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl Name="myTab" TabStripPlacement="Left" SelectionChanged="myTab_SelectionChanged">
            <TabItem >
