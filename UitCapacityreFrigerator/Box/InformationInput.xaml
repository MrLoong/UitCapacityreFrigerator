                            <Button Content="糖果" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_15"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical">
                            <Button Content="黄瓜" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_16"/>
                            <Button Content="西红柿" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_17"/>
                            <Button Content="韭菜" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_18"/>
                            <Button Content="南瓜" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_19"/>
                            <Button Content="苦瓜" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_20"/>
                            <Button Content="蔬菜" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_21"/>
                            <Button Content="胡萝卜" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_22"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical">
                            <Label Content="物品：" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Height="63" Width="114" FontSize="40"/>
                            <TextBlock  x:Name="text_Copy" HorizontalAlignment="Left" Margin="50,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="63" Width="594" FontSize="40"/>
                            
                            <Label Content="重量：" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Height="63" Width="114" FontSize="40"/>
                            <TextBlock  Name="text" HorizontalAlignment="Left" Margin="50,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="63" Width="589" FontSize="40"/>                         
                        </StackPanel>
                    </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button  Content="退出" FontSize="28" Foreground="White" Background="#FF3B3939"  Margin="30,10,0,0" Width="209" Click="Button_Click_23"/>
