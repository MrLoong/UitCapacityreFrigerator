                        <TextBox Name="lampBox2" Text="" FontSize="28" Foreground="Black" Width="172" Background="#adadad"  BorderThickness="0"/>
                    </StackPanel>
                    <Rectangle Height="2" Width="600" Stroke="Black" StrokeThickness="0" Fill="Black" Margin="10"/>
                    <StackPanel Orientation="Horizontal" Margin="98,0,0,0">
                        <TextBlock  Name="text3" Text="" FontSize="28" Foreground="Black"  Width="441"/>
                        <TextBox Name="lampBox3" Text="" FontSize="28" Foreground="Black" Width="170" Background="#adadad"  BorderThickness="0"/>
                    </StackPanel>
                    <Rectangle Height="2" Width="600" Stroke="Black" StrokeThickness="0" Fill="Black" Margin="10"/>
                    <StackPanel Orientation="Horizontal" Margin="98,0,49,0">
                        <TextBlock  Name="text4" Text="" FontSize="28" Foreground="Black"  Width="441"/>
