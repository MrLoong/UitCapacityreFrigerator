                    <StackPanel Orientation="Horizontal" Margin="80,0,49,0">
                        <Button  Content="退出" FontSize="28" Foreground="White" Background="#FF3B3939"  Margin="30,10,0,0" Width="209" Click="Button_Click_1"/>
                        <Button Content="保存" FontSize="28" Foreground="White" Background="#FF3B3939" Margin="110,10,0,0" Click="Button_Click" Width="210" />
                        
                    </StackPanel>

                </StackPanel>
            </StackPanel>
            <Controls:FlipView Grid.Row="1" Name="setting" IsBannerEnabled="True"  
                                 Margin="0, 0, 0, 0">
                <Controls:FlipView.Items>
                    <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" >
                            
                            <Button Content="香蕉" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="Button_Click_2"/>
                            <Button Content="橘子" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50"  Click="Button_Click_3"/>
                            <Button Content="柠檬" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="95" Height="50"  Click="Button_Click_4"/>
