       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
                      Title="信息录入" Height="700" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row ="0" Orientation="Horizontal">
            <TextBlock Name="settingTitleBlock" Text="信息录入" FontSize="32" Foreground="Gray" Margin="20" />
        </StackPanel>
        <Controls:FlipView Grid.Row="1" Name="settingFlipView" IsBannerEnabled="True" HorizontalAlignment="Left" Width="792">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="110,0,0,0">
                        <TextBlock Text="状态" FontSize="28" Foreground="Black" Width="178"/>
                        <TextBlock Text="物品名称" FontSize="28" Foreground="Black" Width="178"/>                  
                        <TextBlock Text="数量" FontSize="28" Foreground="Black" Margin="120,0,0,0"/>
                    </StackPanel>
                    <Rectangle Height="4" Width="600" Stroke="Black" StrokeThickness="0" Fill="Black" Margin="20,80,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="110,0,0,0">
                        <TextBlock Name="text1" Text=" " FontSize="28" Foreground="Black"  Width="178"/>
                        <TextBox Name="lampBox1" Text=" " FontSize="28" Foreground="Black" Width="178"  BorderThickness="0"/>
                        <TextBox Name="lampBox" Text=" " FontSize="28" Foreground="Black" Width="100" BorderThickness="0" Margin="120,0,0,0"/>
                    </StackPanel>
                    <Rectangle Height="2" Width="600" Stroke="Black" StrokeThickness="0" Fill="Black" Margin="10"/>
                    
                    
